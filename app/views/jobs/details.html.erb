<!-- Start Faq Area -->

    <section class="faq section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h3 class="wow zoomIn" data-wow-delay=".2s">Faq</h3>
                        <h2 class="wow fadeInUp" data-wow-delay=".4s">frequently asked questions</h2>
                        <p class="wow fadeInUp" data-wow-delay=".6s">There are many variations of passages of Lorem
                            Ipsum available, but the majority have
                            suffered alteration in some form.</p>
                    </div>
                </div>
            </div>
<!-- Start details Area -->
<div class="row mb-4 justify-content-end">
                <div class="col-2 ">
                  <%= link_to make_reservation_path(id: @jobs.first.hrayfi_id), method: :get do %>
                      <button type="button" class="btn btn-dark">Book</button>
                  <%end%>
            </div>
</div>
<% i = 1%>
<% @jobs.each do |item| %>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading1">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target='<%="#collapse#{i}"%>' aria-expanded="false" aria-controls='<%="collapse#{i}"%>'>
                                    <span class="title"><%=item.title%></span><i
                                        class="lni lni-plus"></i>
                                </button>
                            </h2>
                            <div id='<%="collapse#{i}"%>' class="accordion-collapse collapse" aria-labelledby="heading1"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <p><%=item.description%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
<%i+=1%>
<%end %>
<!-- End details Area -->
          </div>
</section>
    <!--/ End Faq Area -->
