

<section class="ticket-section section-padding content">
  <div class="section-overlay"></div>

  <div class="container">
    <div class="row">

      <div class="col-lg-6 col-10 mx-auto">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="text-center mb-4">Se connecter</h2>

        <div >
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

          <%= f.button :submit, "Log in" %>
          <% end %>

          <%= render "devise/shared/links" %>
          <div class="col-lg-4 col-md-10 col-8 mx-auto">
            <button type="submit" class="form-control">Se connecter</button>
          </div>
        </div>

      </div>
    </div>
  </div>

</section>
